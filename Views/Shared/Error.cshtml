@model ErrorViewModel

@{
    ViewData["Title"] = "Error";
}

<div class="flex flex-col items-center justify-center min-h-screen bg-gray-50 text-center p-6">
    <div class="bg-white shadow-lg rounded-2xl p-8 max-w-lg w-full">
        <h1 class="text-2xl font-bold text-red-600 mb-4">@Model.ErrorTitle</h1>
        <p class="text-gray-700 mb-6">@Model.ErrorMessage</p>

        <form asp-controller="@Model.ReturnController" asp-action="@Model.ReturnAction">
            <button type="submit"
                class="bg-blue-600 hover:bg-blue-700 text-white px-5 py-2 rounded-xl shadow-md transition">
                @Model.ReturnButtonText
            </button>
        </form>
    </div>
</div>