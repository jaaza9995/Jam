@model List<Jam.ViewModels.QuestionSceneBaseViewModel>

@{
    ViewData["Title"] = "Edit Question Scenes";
}

<h2>Edit Question Scenes</h2>

<form asp-action="EditQuestionScenes" asp-controller="StoryEditing" method="post">
 <input type="hidden" name="storyId" value="@Model.First().StoryId" />
    <div id="questionScenesContainer">
        @for (int i = 0; i < Model.Count; i++)
        {
            var vd = new Microsoft.AspNetCore.Mvc.ViewFeatures.ViewDataDictionary(ViewData)
            {
                TemplateInfo = { HtmlFieldPrefix = $"[{i}]" }
            };
            vd["QuestionNumber"] = i + 1;

            <div class="card p-4 mb-4 bg-light border rounded-3 shadow-sm">
                <h4 class="mb-3">Question @vd["QuestionNumber"]</h4>

                <input type="hidden" asp-for="@Model[i].QuestionSceneId" />
                <input type="hidden" asp-for="@Model[i].StoryId" />

                <div class="mb-3">
                    <label asp-for="@Model[i].StoryText" class="form-label fw-bold">Story Text</label>
                    <textarea asp-for="@Model[i].StoryText" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="@Model[i].StoryText" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model[i].QuestionText" class="form-label fw-bold">Question</label>
                    <input asp-for="@Model[i].QuestionText" class="form-control" />
                    <span asp-validation-for="@Model[i].QuestionText" class="text-danger"></span>
                </div>

                <h5 class="mt-4">Answer Options</h5>
                @for (int j = 0; j < Model[i].Answers.Count; j++)
                {
                    <div class="card mb-2 p-2 bg-white border rounded-2">
                        <div class="d-flex align-items-center mb-2">
                            <label class="me-2">Answer @(j + 1):</label>
                            <input asp-for="@Model[i].Answers[j].AnswerText" class="form-control me-2" />
                            <span asp-validation-for="@Model[i].Answers[j].AnswerText" class="text-danger"></span>

                            <input type="radio"
                                   name="@($"[{i}].CorrectAnswerIndex")"
                                   value="@j"
                                   class="form-check-input"
                                   @(Model[i].CorrectAnswerIndex == j ? "checked" : "") />
                            <label class="form-check-label ms-1">Correct</label>
                        </div>

                        <div>
                            <label asp-for="@Model[i].Answers[j].ContextText" class="form-label">Follow-up text:</label>
                            <input asp-for="@Model[i].Answers[j].ContextText" class="form-control" />
                            <span asp-validation-for="@Model[i].Answers[j].ContextText" class="text-danger"></span>
                        </div>
                    </div>
                }
                <span asp-validation-for="@Model[i].CorrectAnswerIndex" class="text-danger"></span>
<!-- Delete-knapp for sp√∏rsm√•l som finnes i databasen -->
<!-- inni loopen -->
        <div class="text-center mt-3">
            <button type="submit"
                    name="action"
                    value="deleteInline:@i"
                    class="btn btn-outline-danger btn-sm w-100">
                Delete
            </button>
        </div>

            </div>
        }
    </div>
     <button type="submit"
            name="action"
            value="back"
            class="btn btn-outline-secondary">
        ‚Üê Back
    </button>

    <div class="mt-3 d-flex gap-2">
        <button type="button" id="addSceneBtn" class="btn btn-secondary">+ Add New Question Scene</button>
        <button type="submit"
            name="action"
            value="save"
            class="btn btn-primary ms-2">
        üíæ Save All Changes
    </button>
    </div>
</form>

<!-- Legg til modalen nederst -->
@{
    var deleteQuestionModel = (0, 0, "Question");
}
<partial name="~/Views/Shared/_DeleteQuestionModal.cshtml" model="deleteQuestionModel" />

@section Scripts {
    <script>
        // --- Add Question ---
        document.getElementById('addSceneBtn').addEventListener('click', function () {
            const container = document.getElementById('questionScenesContainer');
            const index = container.querySelectorAll('.question-card, .card.p-4').length;

            fetch('@Url.Action("GetEditQuestionScenePartial", "StoryEditing")?index=' + index + '&questionNumber=' + (index + 1))
                .then(r => r.text())
                .then(html => {
                    container.insertAdjacentHTML('beforeend', html);
                    $.validator.unobtrusive.parse(container);
                });
        });

        // --- Delete Modal Setup ---
        // --- Delete Question (lokalt) ---
        document.addEventListener('click', function (e) {
            if (e.target.closest('.delete-question-btn')) {
                const btn = e.target.closest('.delete-question-btn');
                const card = btn.closest('.card');
                card.remove();

                // Oppdater nummerering etter sletting
                const cards = document.querySelectorAll('#questionScenesContainer .card.p-4');
                cards.forEach((c, i) => {
                    const header = c.querySelector('h4');
                    if (header) header.textContent = `Question ${i + 1}`;
                });
            }
        });

    </script>
}
